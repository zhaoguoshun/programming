<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanou.project.system.mapper.TbSlideshowMapper">

    <resultMap type="TbSlideshow" id="TbSlideshowResult">
        <result property="id"    column="id"    />
        <result property="imgUrl"    column="img_url"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectTbSlideshowVo">
        select id, img_url, create_time from tb_slideshow
    </sql>

    <select id="selectTbSlideshowList" parameterType="TbSlideshow" resultMap="TbSlideshowResult">
        <include refid="selectTbSlideshowVo"/>
        <where>
            <if test="imgUrl != null  and imgUrl != ''"> and img_url = #{imgUrl}</if>
        </where>
    </select>

    <select id="selectTbSlideshowById" parameterType="Long" resultMap="TbSlideshowResult">
        <include refid="selectTbSlideshowVo"/>
        where id = #{id}
    </select>

    <insert id="insertTbSlideshow" parameterType="TbSlideshow" useGeneratedKeys="true" keyProperty="id">
        insert into tb_slideshow
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="imgUrl != null">img_url,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="imgUrl != null">#{imgUrl},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateTbSlideshow" parameterType="TbSlideshow">
        update tb_slideshow
        <trim prefix="SET" suffixOverrides=",">
            <if test="imgUrl != null">img_url = #{imgUrl},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTbSlideshowById" parameterType="Long">
        delete from tb_slideshow where id = #{id}
    </delete>

    <delete id="deleteTbSlideshowByIds" parameterType="String">
        delete from tb_slideshow where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
